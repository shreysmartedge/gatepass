<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <!-- css files path start  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <!-- css files path end   -->


    <!-- jqurey files path start  -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <!-- jqurey files path end   -->

    <title>Gatepass System</title>
</head>

<body>
<form action="visitorDeatils" method="post">
        <!-- Searched info section start -->
        <div class="container-lg pt-lg-5">
            <div class="row p-lg-3"
                style="background-color: #e2e8f0;padding-top: 3rem;padding-bottom: 3rem;border-radius: 25px;">
                <div class="col-lg-4">
                    <div class="card mt-3 mb-3" style="background-color: snow">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin"
                                    class="rounded-circle" width="150">
                                <div class=" col-md-12 mt-3 mb-3">
                                    <hr>
                                    <h4>{{name}}</h4>
                                </div>
                                <div class="col-md-12">
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Date</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{vdate}}
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Check-in Time</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{vintime}}
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Check-Out Time</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{vouttime}}
                                        </div>
                                    </div>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="card mt-3 mb-3" style="background-color: snow;">
                        <div class="mt-3 mb-3">
                            <h4 style="text-align: center;">Visitor visit details.</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Visitor Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{name}}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{vemail}}
                                </div>
                            </div>

                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Mobile Number</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{vmobile}}
                                </div>
                            </div>

                            <hr>


                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{vadd}}
                                </div>
                            </div>

                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Purpose of visit</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{pvisitdata}}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Person to visit</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ptovdata}}
                                </div>
                            </div>
                            <hr>
                                                        <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Person to visit</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ptovdata}}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4 float-sm-end text-center">
                                    <button id="verifybtn" type="submit" class="btn btn-success">Verify</button>
                                </div>
                                <div class="col-sm-4 float-sm-end text-center">
                                    <button id="printbtn" class="btn btn-primary"
                                        onclick="window.print()">Print</button>
                                </div>
                                <div class="col-sm-4 float-sm-end text-center">
                                   <a href="searchVisitor"> <button id="backbtn" type="submit" value="Back"
                                        class="btn btn-warning">Back</button></a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- Searched info section end -->

</body>

</html>